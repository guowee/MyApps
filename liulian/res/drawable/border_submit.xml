<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 两层item，下面的遮住上面的 -->
    <item>
        <shape>
            <solid android:color="#FE7777" />
            <!-- 连框颜色值 -->

            <!-- 圆角 -->
            <corners android:radius="5dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="1dp"
        android:left="1dp"
        android:right="1dp"
        android:top="1dp">
        <shape>
            <solid android:color="#ffffff" />

         <!--    <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" /> -->
            <!-- 圆角 -->
            <corners android:radius="10dp" />
        </shape>
    </item>

</layer-list>